<section class="vh-100">

  <div class="product-filter">

    <div class="container m-5">
      <h2>Search Here:</h2>

      <div class="float-container">
        <div class="float-child">
          <div class="">
            <input style=" display:inline-block; width:100%" height="48" type="text" class="form-control" id="searchInput"
              onkeyup="fName('searchInput',1)" placeholder="New things are waiting for you!">
          </div>

          <div class="">
            <input style=" display:inline-block; width:100%" height="48" type="number" class="form-control" id="maxcost"
              onkeyup="fCost('maxcost',3)" placeholder="Enter Max cost">
          </div>
        </div>

        <div class="alignforexplore">
          <div class="collection-sort sort">
            <label>Filter by:</label>
            <select class="dropsize">
              <option value="/">All </option>
            </select>
          </div>
          <div class="collection-sort sort">
            <label>Sort by:</label>
            <select class="dropsize">
              <option value="/">Featured</option>
            </select>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container m-5">
    <table class="table table-hover">
      <h2>List of Products:</h2>
      {{!-- <thead class="thead-light"> --}}
        <tr>
          <th scope="col" style="font-size:26px;">Product Image</th>
          <th scope="col" style="font-size:26px;">Product Name</th>
          <th scope="col" style="font-size:26px;">Category</th>
          <th scope="col" style="font-size:26px;">Price</th>
          {{!-- <th scope="col">Product Price</th> --}}
        </tr>
      </thead>
      <tbody>
        {{#each productList}}
        <tr class="clickable-row" id="{{this._id}}" data-href="productdetails/{{this._id}}">
          <div class="product-info">
            <div class="product-image">
              <td style="width:30%"><img src={{this.image}} width="100" height="100" /></td>
            </div>
            <td style="width:40%">
              <a href="productdetails/{{this._id}}"> {{this.productName}}</a>
            </td>
            <td style="width:20%">
                {{this.productCategory}}
            </td>
            <td style="width:20%">
              {{this.price}}
            </td>
          </div>
        </tr>
</section>
{{/each}}
</tbody>
</table>
</div>
<div class="container m-5" id="no-result" hidden="">
  <p><span class="fa fa-exclamation-circle">&#0160;</span>No results found</p>
</div>