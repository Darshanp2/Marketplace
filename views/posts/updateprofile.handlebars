<div>

<form action="/user/updateProfile" method="post" id="updateprofile">
     <div class="form-elem">
                <label for="name">Name:</label>
                <input name="name" id="name" type="text" value="{{name}}" placeholder="3 characters minimum" minlength="3"  >
            </div>
            <div class="form-elem">
                <label for="address">Address:</label>
                <input name="address" id="address" type="text" value="{{address}}" placeholder="Full Address Please" minlength="5">
            </div>
            <div class="form-elem">
                <label for="phoneNumber">Phone Number:</label>
                <input name="phoneNumber" id="phoneNumber" type="text" min="0" value="{{phoneNumber}}"
                    placeholder="Your Phone Number" >
            </div>
            <div class="form-elem">
                <label for="email">Email:</label>
                <input name="email" id="email" type="text" value="{{email}}" placeholder="Your Email" >
            </div>
            <div class="form-elem">
                <label for="password">Password:</label>
                <input name="password" id="password" type="password" value="{{password}}"
                    placeholder=" 6 characters minimum" >
            </div><br> 
    <input type="submit" value="Update">
     <div id="error">
  <ul id="errorList"></ul>
</div>
{{#if error}}
    <div class="login-error">
        <p>{{error}}</p>
    </div>
    {{/if}}

</form>

<ul>
    {{#each products}}


        <li><img src={{this.image}} width="100" height="100"  /></li>
        Name: {{this.productName}}<br>
        Price:{{this.price}}<br>
        <a href="/product/updateProduct/{{this._id}}">edit</a>   <a href="/product/delete/{{this._id}}">delete</a>
        {{/each}}
</ul>
<script src="/public/js/updateprofile.js"></script>
</div>