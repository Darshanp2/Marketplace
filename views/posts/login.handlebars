

<main>

<div class="login-container">
  <div class="login-header">
    <h1>Marketplace</h1>
  </div>
  <div id="loginError" class="loginError" hidden>

  </div>
  <form method="POST" id="login-form" action="/private">
    <div class="form-elem">
      <label for="email">email.:</label>
      <input
        name="email"
        id="email"
        type="text"
        value="{{email}}"
        placeholder="email"
      />
    </div>
    <div class="form-elem">
      <label for="password">Password:</label>
      <input
        name="password"
        id="password"
        type="password"
        placeholder="password(6 - characters minimum)"
      />
    </div>
    <button type="submit">Login</button>
  </form>
</div>
